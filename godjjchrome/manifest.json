{
    "manifest_version": 2,
    "name": "GodJJ Now",
    "description": "是一款真正的JJ套件",
    "version": "1.5.1",
    "permissions": [
        "alarms",
        "storage",
        "notifications",
        "https://www.op.gg/",
        "http://www.op.gg/",
        "https://lol.moa.tw/"
    ],
    "options_ui":
    {
        "page": "options.html",
        "chrome_style": true
    },
    "background":
    {
        "page": "background.html",
        "persistent": true
    },
    "browser_action":
    {
        "default_title": "點我查詢GodJJ",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "icons":
    {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_security_policy": "script-src 'self' https://cdn.tmijs.org/; object-src 'self'"
}